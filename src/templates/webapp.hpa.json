{
  "apiVersion": "autoscaling/v1",
  "kind": "HorizontalPodAutoscaler",
  "metadata": {
    "name": "blockcluster-hpa",
    "namespace": "default"
  },
  "spec": {
    "maxReplicas": 20,
    "minReplicas": 3,
    "scaleTargetRef": {
      "apiVersion": "extensions/v1beta1",
      "kind": "Deployment",
      "name": "blockcluster-webapp-deploy"
    },
    "targetCPUUtilizationPercentage": 60
  }
}